<% layout('layouts/boilerplate')%>
  <div class="row">
  <h1 class="text-center">Register</h1>
  <div class="col-md-6 offset-md-3">
  <form action="/register" method="POST" class="validated-form" novalidate>
  <div class="mb-3">
    <label for="username">Username: </label><br>
  <input type="text" name="username" id="username" class="form-control" required><br>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please make sure you enter a username.
    </div>
  </div>
  <div class="mb-3">
    <label for="email">Email: </label><br>
  <input type="email" name="email" id="email" class="form-control" required><br>
<div class="valid-feedback">
                    Looks good!
                </div>
    <div class="invalid-feedback">
      Please enter your email address.
    </div>
  </div>
  
  <div class="mb-3">
    <label for="password">Password: </label><br>
  <input type="password" name="password" id="password" class="form-control" required><br>
<div class="valid-feedback">
                    Looks good!
                </div>
    <div class="invalid-feedback">
      Please define your password.
    </div>
  </div>
  <button class="btn btn-primary mb-2">Register</button>
</form>
    </div>
</div>