<% layout('./layouts/boilerplate')%>
  <div class="row">
  <h1 class="text-center">Edit Chicken</h1>
  <div class="col-md-6 offset-md-3">
  <form action="/chickens/<%=chicken.id%>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="name">Name: </label><br>
  <input type="text" name="chicken[name]" id="name" class="form-control" value="<%=chicken.name%>" required><br>
    <div class="valid-feedback">
                    Looks good!
                </div>
  </div>
  <div class="mb-3">
    <label for="breed">Breed: </label><br>
  <input type="text" name="chicken[breed]" id="breed" class="form-control" value="<%=chicken.breed%>" required><br>
<div class="valid-feedback">
                    Looks good!
                </div>
  </div>
  
  <div class="mb-3">
    <label for="weight">Weight: </label><br>
  <input type="text" name="chicken[weight]" id="weight" class="form-control" value="<%=chicken.weight%>" required><br>
<div class="valid-feedback">
                    Looks good!
                </div>
  </div>
    <div class="mb-3">
      <label for="imgUrl">Image Url: </label><br>
      <input type="text" name="chicken[imgUrl]" id="imgUrl" class="form-control" value="<%=chicken.imgUrl%>" required>
      <div class="valid-feedback">
                    Looks good!
      </div>
    </div>
  
    <div class="mb-3">
      <label for="birthday">Birthday: </label><br>
      <input type="text" name="chicken[birthday]" id="birthday" class="form-control" value="<%=chicken.birthday%>" required>
      <div class="valid-feedback">
                    Looks good!
      </div>
    </div>
    
  
  <button class="btn btn-primary">Update</button>
</form>
    </div>
</div>